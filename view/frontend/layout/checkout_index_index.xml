<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <title>Delivery Test Page</title>
        <css  src="MyParcelCOM_Magento::css/mp-delivery.css" />
        <css  src="MyParcelCOM_Magento::css/mp-delivery-custom.css" />
    </head>
    <body>
        <referenceBlock name="minicart" remove="true" />
        <referenceContainer name="header.panel" remove="true" />
        <referenceBlock name="top.search" remove="true" />
        <referenceContainer name="content">
            <block class="MyParcelCOM\Magento\Block\Sales\CheckoutDelivery" name="myparcelcom.delieveryplugin" template="checkout_delivery.phtml" after="-" />
        </referenceContainer>
        <referenceBlock name="checkout.root">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="checkout" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="steps" xsi:type="array">
                                    <item name="children" xsi:type="array">
                                        <item name="shipping-step" xsi:type="array">
                                            <item name="children" xsi:type="array">
                                                <item name="shippingAddress" xsi:type="array">
                                                    <item name="config" xsi:type="array">
                                                        <item name="shippingMethodItemTemplate" xsi:type="string">MyParcelCOM_Magento/custom-method-item-template</item>
                                                        <item name="shippingMethodListTemplate" xsi:type="string">MyParcelCOM_Magento/custom-method-list-template</item>
                                                    </item>
                                                </item>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>